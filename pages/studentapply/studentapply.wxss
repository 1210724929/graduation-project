/* pages/sutdentapply/sutdentapply.wxss */

page {
  background: #f3f3f3;
  margin: 0;
  padding: 0;
}
.mathFrend{
  display: block;
 font-family: Georgia;
 font-size: 32rpx;
 text-align: center;
 margin-top: 10rpx;
 margin-bottom: 10rpx;
 margin-right: 20rpx;
 overflow: hidden;
 height: 50rpx;
}
.mathFrend text{
  display: block;
  width: 150rpx;
  float: right;
  height:50rpx; 

}
.matchfriendimg{
  display: block;
  float: right;
  padding-top:9rpx;
  width: 34rpx;
  height: 34rpx;
}
.apply {
  margin: 10rpx 30rpx 2rpx 30rpx;
}

.applylist {
  margin-bottom: 30rpx;
  overflow: hidden;
}

.applylisttitle {
  overflow: hidden;
  height: 60rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid #aaa;
}

.applyid {
  display: block;
  margin: 10rpx;
  float: left;
  color: #aaa;
}

.applytype {
  display: block;
  margin: 1rpx;
  width: 80rpx;
  float: right;
}

.applystate {
  display: block;
  font-size: 32rpx;
  margin-top: 10rpx;
  width: 120rpx;
  line-height: 32rpx;
  float: right;
  color: green;
}
.applystate2{
 
  color: red;
}

.applytext {
  display: block;
  margin: 20rpx 15rpx 10rpx 10rpx;
  font-size: 31rpx;
}

.applyoperation {
  overflow: hidden;
  margin-right: 10rpx;
  font-size: 30rpx;
}

.applytime {
  display: block;
  float: left;
  color: #aaa;
}

.applymodify {
  display: block;
  float: right;
  margin-right: 40rpx;
}

.applydelete {
  display: block;
  float: right;
}

.applyscan {
  position: fixed;
  bottom:0;
  overflow: hidden;
  font-size: 33rpx;
  width: 100%;
  height: 60rpx;
  padding-left:10rpx; 
  padding-top:10rpx; 
  background: #aaa;
}
.applyscanitem{
  display: block;
  float: left;
  width: 210rpx;
  margin: 2rpx;
  text-align: center;
}
.matchfriendimg1{
   display: block;
  float: left;
  padding-top:9rpx;
  width: 34rpx;
  height: 34rpx;
}

